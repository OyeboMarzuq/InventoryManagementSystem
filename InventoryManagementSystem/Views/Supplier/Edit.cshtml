@model InventoryManagementSystem.DTO.SupplierDto
@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="p-6 space-y-8">
    <!-- Header Section -->
    <div class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-blue-500 to-blue-600 p-8 text-white">
        <div class="relative z-10">
            <h1 class="text-3xl font-bold mb-2">Edit Supplier</h1>
            <p class="text-blue-100">Update supplier information</p>
        </div>
        <!-- Decorative Elements -->
        <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
        <div class="absolute bottom-0 left-0 -mb-4 -ml-4 w-32 h-32 bg-white/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Form Section -->
    <div class="max-w-2xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-8 border border-gray-100 dark:border-gray-700">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SupplierId" />

                @if (!ViewContext.ModelState.IsValid)
                {
                    <div class="bg-red-500/20 border border-red-500/50 rounded-lg p-3 mb-6">
                        <div asp-validation-summary="All" class="text-red-700 dark:text-red-200 text-sm"></div>
                    </div>
                }

                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Name -->
                        <div class="space-y-2">
                            <label asp-for="Name" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Name</label>
                            <input asp-for="Name" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                            <span asp-validation-for="Name" class="text-red-600 dark:text-red-400 text-xs"></span>
                        </div>

                        <!-- Email -->
                        <div class="space-y-2">
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Email</label>
                            <input asp-for="Email" type="email" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                            <span asp-validation-for="Email" class="text-red-600 dark:text-red-400 text-xs"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="space-y-2">
                            <label asp-for="ValidPhoneNumber" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Phone Number</label>
                            <input asp-for="ValidPhoneNumber" type="tel" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                            <span asp-validation-for="ValidPhoneNumber" class="text-red-600 dark:text-red-400 text-xs"></span>
                        </div>

                    <!-- Address -->
                    <div class="space-y-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Address</label>
                        <textarea asp-for="Address" rows="3" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
                        <span asp-validation-for="Address" class="text-red-600 dark:text-red-400 text-xs"></span>
                    </div>

                    <!-- Description -->
                    <div class="space-y-2">
                        <label asp-for="FatherName" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Description</label>
                            <textarea asp-for="FatherName" rows="4" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
                            <span asp-validation-for="FatherName" class="text-red-600 dark:text-red-400 text-xs"></span>
                    </div>

                    <div class="flex justify-end space-x-4">
                        <a asp-action="Index" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 font-semibold rounded-lg transition-colors">
                            Cancel
                        </a>
                        <button type="submit" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg transition-colors">
                            Save Changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>