@model InventoryManagementSystem.DTO.SupplierDto
@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="p-6 space-y-8">
    <!-- Header Section -->
    <div class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-red-500 to-red-600 p-8 text-white">
        <div class="relative z-10">
            <h1 class="text-3xl font-bold mb-2">Delete Supplier</h1>
            <p class="text-red-100">Are you sure you want to delete this supplier?</p>
        </div>
        <!-- Decorative Elements -->
        <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
        <div class="absolute bottom-0 left-0 -mb-4 -ml-4 w-32 h-32 bg-white/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Delete Confirmation -->
    <div class="max-w-2xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-8 border border-gray-100 dark:border-gray-700">
            <div class="space-y-6">
                <div class="bg-red-50 dark:bg-red-900/30 border border-red-100 dark:border-red-800 rounded-lg p- 4 mb-6">
                    <p class="text-red-800 dark:text-red-200">This action cannot be undone. Please be certain.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Supplier Name</h3>
                        <p class="mt-1 text-lg font-semibold text-gray-900 dark:text-white">@Model.Name</p>
                    </div>

                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</h3>
                        <p class="mt-1 text-lg text-gray-900 dark:text-white">@Model.Email</p>
                    </div>

                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">ValidPhone Number</h3>
                        <p class="mt-1 text-lg text-gray-900 dark:text-white">@Model.ValidPhoneNumber</p>
                    </div>

                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Address</h3>
                    <p class="mt-1 text-lg text-gray-900 dark:text-white">@Model.Address</p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">FatherName</h3>
                    <p class="mt-1 text-lg text-gray-900 dark:text-white">@Model.FatherName</p>
                </div>

                <form asp-action="Delete" method="post" class="mt-8">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="SupplierId" />

                    <div class="flex justify-end space-x-4">
                        <a asp-action="Index" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 font-semibold rounded-lg transition-colors">
                            Cancel
                        </a>
                        <button type="submit" class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg shadow-lg transition-colors">
                            Delete Supplier
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>