@model InventoryManagementSystem.Models.SignUp
@{

    ViewData["Title"] = "SignUp";

    Layout = null;
}

<div class="min-h-screen bg-gradient-to-br from-gray-900 to-blue-900 flex items-center justify-center p-4">
    <div class="w-full max-w-2xl">
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-xl p-8 border border-white/20">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-white mb-2">Create Account</h1>
                <p class="text-blue-200">Join our inventory management system</p>
            </div>

            <form asp-action="SignUp" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                
                @if (!ViewContext.ModelState.IsValid)
                {
                    <div class="bg-red-500/20 border border-red-500/50 rounded-lg p-3 mb-4">
                        <div asp-validation-summary="All" class="text-red-200 text-sm"></div>
                    </div>
                }

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- First Name -->
                    <div class="space-y-2">
                        <label asp-for="FirstName" class="block text-sm font-medium text-blue-200">First Name</label>
                        <input asp-for="FirstName" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white placeholder-gray-400" placeholder="John" required />
                        <span asp-validation-for="FirstName" class="text-red-400 text-xs"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="space-y-2">
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-blue-200">Phone Number</label>
                        <input asp-for="PhoneNumber" type="tel" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white placeholder-gray-400" placeholder="+1234567890" required />
                        <span asp-validation-for="PhoneNumber" class="text-red-400 text-xs"></span>
                    </div>

                    <!-- Date of Birth -->
                    <div class="space-y-2">
                        <label asp-for="DateOfBirth" class="block text-sm font-medium text-blue-200">Date of Birth</label>
                        <input asp-for="DateOfBirth" type="date" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white placeholder-gray-400" required />
                        <span asp-validation-for="DateOfBirth" class="text-red-400 text-xs"></span>
                    </div>

                    <!-- Gender -->
                    <div class="space-y-2">
                        <label asp-for="Gender" class="block text-sm font-medium text-blue-200">Gender</label>
                        <select asp-for="Gender" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-red-400 text-xs"></span>
                    </div>

                    <!-- User Role -->
                    <div class="space-y-2">
                        <label asp-for="UserRole" class="block text-sm font-medium text-blue-200">Role</label>
                        <select asp-for="UserRole" asp-items="Html.GetEnumSelectList<InventoryManagementSystem.Enum.UserRole>()" 
                                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white" required>
                            <option value="">Select Role</option>
                        </select>
                        <span asp-validation-for="UserRole" class="text-red-400 text-xs"></span>
                    </div>

                    <!-- Password -->
                    <div class="space-y-2">
                        <label asp-for="Password" class="block text-sm font-medium text-blue-200">Password</label>
                        <input asp-for="Password" type="password" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white placeholder-gray-400" placeholder="••••••••" required />
                        <span asp-validation-for="Password" class="text-red-400 text-xs"></span>
                        <p class="text-xs text-blue-200">Must be at least 6 characters long</p>
                    </div>

                    <!-- Active Status -->
                    <div class="space-y-2 flex items-center">
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input asp-for="IsActive" type="checkbox" class="sr-only peer" checked>
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
                            <span class="ml-3 text-sm font-medium text-blue-200">Active Account</span>
                        </label>
                    </div>
                </div>

                <!-- Address -->
                <div class="space-y-2">
                    <label asp-for="Address" class="block text-sm font-medium text-blue-200">Address</label>
                    <textarea asp-for="Address" rows="3" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white placeholder-gray-400" placeholder="Enter your address" required></textarea>
                    <span asp-validation-for="Address" class="text-red-400 text-xs"></span>
                </div>

                <button type="submit" class="w-full py-3 px-4 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-lg shadow-lg transform transition hover:scale-[1.02]">
                    Create Account
                </button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-blue-200">
                    Already have an account? 
                    <a asp-controller="Auth" asp-action="Login" class="text-blue-300 hover:text-blue-200 font-medium">Login</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add subtle animation to the form card
        document.addEventListener('DOMContentLoaded', () => {
            const card = document.querySelector('.backdrop-blur-lg');
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'all 0.6s ease-out';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
}